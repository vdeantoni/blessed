{
  "name": "@vdeantoni/blessed",
  "description": "A high-level terminal interface library for node.js.",
  "author": "Christopher Jeffrey",
  "version": "1.0.0-alpha.17",
  "license": "MIT",
  "type": "module",
  "main": "./dist/blessed.js",
  "module": "./dist/blessed.js",
  "types": "./dist/blessed.d.ts",
  "exports": {
    ".": {
      "types": "./dist/blessed.d.ts",
      "import": "./dist/blessed.js",
      "require": "./dist/blessed.cjs"
    },
    "./usr/terminfo/*.json": "./usr/terminfo/*.json",
    "./usr/fonts/*.json": "./usr/fonts/*.json"
  },
  "bin": {
    "blessed": "dist/tput.js"
  },
  "preferGlobal": false,
  "repository": {
    "type": "git",
    "url": "git://github.com/vdeantoni/blessed.git"
  },
  "homepage": "https://github.com/vdeantoni/blessed",
  "bugs": {
    "url": "https://github.com/vdeantoni/blessed/issues"
  },
  "keywords": [
    "curses",
    "tui",
    "tput",
    "terminfo",
    "termcap",
    "typescript",
    "terminal"
  ],
  "tags": [
    "curses",
    "tui",
    "tput",
    "terminfo",
    "termcap"
  ],
  "engines": {
    "node": ">= 22.0.0"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.cjs",
    "dist/**/*.d.ts",
    "dist/**/*.d.cts",
    "dist/**/*.map",
    "usr/**/*",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "browserify": {
    "transform": [
      "./browser/transform.js"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/node": "24.6.2",
    "@typescript-eslint/eslint-plugin": "8.45.0",
    "@typescript-eslint/parser": "8.45.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "9.37.0",
    "eslint-config-prettier": "10.1.8",
    "prettier": "3.6.2",
    "tsup": "8.5.0",
    "typescript": "5.9.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@types/omggif": "^1.0.5",
    "@types/pngjs": "^6.0.5",
    "omggif": "^1.0.10",
    "pngjs": "^7.0.0"
  }
}
