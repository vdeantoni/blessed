{
  "compilerOptions": {
    // Enable JavaScript files
    "allowJs": true,
    "checkJs": false,

    // Target and module
    "target": "ES2020",
    "module": "ES2022",
    "lib": ["ES2020"],

    // Module resolution
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Output
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // Type checking - PHASE 3B: Enabling strict flags incrementally
    // Now that widget constructors have proper types
    "strict": false,
    "noImplicitAny": true, // âœ… Already enabled from Phase 3A
    "strictNullChecks": true, // âœ… PHASE 3B: Step 6 - COMPLETE
    "strictFunctionTypes": true, // âœ… PHASE 3B: Step 3
    "strictBindCallApply": true, // âœ… PHASE 3B: Step 4
    "strictPropertyInitialization": true, // ðŸ”„ PHASE 3B: Step 7 - IN PROGRESS
    "noImplicitThis": true, // âœ… PHASE 3B: Step 5
    "alwaysStrict": true,
    "useUnknownInCatchVariables": true, // âœ… Catch variables are unknown (safer than any)

    // Additional checks - PHASE 3B: Enabling incrementally
    "noUnusedLocals": true, // ðŸ”„ PHASE 3B: Step 8 - IN PROGRESS
    "noUnusedParameters": true, // ðŸ”„ PHASE 3B: Step 8 - IN PROGRESS
    "noImplicitReturns": true, // âœ… PHASE 3B: Step 1
    "noFallthroughCasesInSwitch": true, // âœ… PHASE 3B: Step 2
    "noUncheckedIndexedAccess": false, // Phase 4: Requires 181 fixes
    "noImplicitOverride": true, // âœ… Explicit override keyword (26 fixes needed)
    "allowUnusedLabels": false, // âœ… Disallow unused labels
    "allowUnreachableCode": false, // âœ… Disallow unreachable code

    // Other options
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "lib/**/*",
    "bin/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "__tests__",
    "benchmarks",
    "example",
    "coverage"
  ]
}