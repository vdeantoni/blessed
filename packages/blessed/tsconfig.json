{
  "compilerOptions": {
    // Enable JavaScript files
    "allowJs": true,
    "checkJs": false,

    // Target and module
    "target": "ES2020",
    "module": "ES2022",
    "lib": ["ES2020"],

    // Module resolution
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Output
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // Type checking - PHASE 3B: Enabling strict flags incrementally
    // Now that widget constructors have proper types
    "strict": false,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "alwaysStrict": true,

    // Additional checks - RELAXED FOR PHASE 3A MIGRATION
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "noUncheckedIndexedAccess": false,

    // Other options
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "lib/**/*",
    "bin/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "__tests__",
    "benchmarks",
    "example",
    "coverage"
  ]
}