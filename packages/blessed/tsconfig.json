{
  "compilerOptions": {
    // Enable JavaScript files
    "allowJs": true,
    "checkJs": false,

    // Target and module
    "target": "ES2020",
    "module": "ES2022",
    "lib": ["ES2020"],

    // Module resolution
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Output
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // Type checking - PHASE 3B: Enabling strict flags incrementally
    // Now that widget constructors have proper types
    "strict": false,
    "noImplicitAny": true, // ✅ Already enabled from Phase 3A
    "strictNullChecks": true, // ✅ PHASE 3B: Step 6 - IN PROGRESS
    "strictFunctionTypes": true, // ✅ PHASE 3B: Step 3
    "strictBindCallApply": true, // ✅ PHASE 3B: Step 4
    "strictPropertyInitialization": false,
    "noImplicitThis": true, // ✅ PHASE 3B: Step 5
    "alwaysStrict": true,

    // Additional checks - PHASE 3B: Enabling incrementally
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true, // ✅ PHASE 3B: Step 1
    "noFallthroughCasesInSwitch": true, // ✅ PHASE 3B: Step 2
    "noUncheckedIndexedAccess": false,

    // Other options
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "lib/**/*",
    "bin/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "__tests__",
    "benchmarks",
    "example",
    "coverage"
  ]
}