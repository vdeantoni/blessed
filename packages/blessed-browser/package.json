{
  "name": "@vdeantoni/blessed-browser",
  "version": "1.0.0-alpha.1",
  "description": "Browser-compatible version of blessed TUI library with xterm.js integration",
  "author": "Christopher Jeffrey (original), Victor De Antoni (browser port)",
  "license": "MIT",
  "type": "module",
  "main": "./dist/blessed-browser.js",
  "module": "./dist/blessed-browser.js",
  "types": "./dist/blessed-browser.d.ts",
  "exports": {
    ".": {
      "types": "./dist/blessed-browser.d.ts",
      "import": "./dist/blessed-browser.js",
      "require": "./dist/blessed-browser.cjs",
      "default": "./dist/blessed-browser.js"
    },
    "./vite-plugin": {
      "types": "./dist/vite-plugin/index.d.ts",
      "import": "./dist/vite-plugin/index.js",
      "default": "./dist/vite-plugin/index.js"
    },
    "./polyfills/*": "./src/polyfills/*.ts"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.map",
    "src/polyfills/**/*.ts",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/vdeantoni/blessed.git",
    "directory": "packages/blessed-browser"
  },
  "homepage": "https://github.com/vdeantoni/blessed",
  "bugs": {
    "url": "https://github.com/vdeantoni/blessed/issues"
  },
  "keywords": [
    "blessed",
    "browser",
    "xterm",
    "terminal",
    "tui",
    "ui",
    "curses",
    "ncurses"
  ],
  "scripts": {
    "generate-termdata": "node scripts/generate-termdata.js",
    "prebuild": "pnpm run generate-termdata",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "dev": "vite example",
    "test": "pnpm run test:unit && pnpm run test:e2e",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "assert": "^2.1.0",
    "buffer": "^6.0.3",
    "events": "^3.3.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "string_decoder": "^1.3.0",
    "util": "^0.12.5",
    "xterm": "^5.3.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@types/node": "24.6.2",
    "@vdeantoni/blessed": "workspace:*",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^25.0.1",
    "tsup": "8.5.0",
    "typescript": "5.9.3",
    "vite": "^6.0.7",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@vdeantoni/blessed": "workspace:*",
    "xterm": "^5.0.0"
  },
  "engines": {
    "node": ">= 18.0.0"
  }
}
