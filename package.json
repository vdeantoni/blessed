{
  "name": "@vdeantoni/blessed",
  "description": "A high-level terminal interface library for node.js.",
  "author": "Christopher Jeffrey",
  "version": "1.0.0-alpha.0",
  "license": "MIT",
  "main": "./lib/blessed.js",
  "bin": {
    "blessed": "bin/tput.js"
  },
  "preferGlobal": false,
  "repository": {
    "type": "git",
    "url": "git://github.com/vdeantoni/blessed.git"
  },
  "homepage": "https://github.com/vdeantoni/blessed",
  "bugs": {
    "url": "https://github.com/vdeantoni/blessed/issues"
  },
  "keywords": [
    "curses",
    "tui",
    "tput",
    "terminfo",
    "termcap",
    "typescript",
    "terminal"
  ],
  "tags": [
    "curses",
    "tui",
    "tput",
    "terminfo",
    "termcap"
  ],
  "engines": {
    "node": ">= 22.0.0"
  },
  "files": [
    "lib/**/*.js",
    "!lib/**/*.ts",
    "bin/**/*.js",
    "vendor/**/*.js",
    "LICENSE",
    "README.md",
    "index.js"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint lib/ bin/ __tests__/",
    "lint:fix": "eslint lib/ bin/ __tests__/ --fix",
    "format": "prettier --write \"lib/**/*.{js,ts}\" \"bin/**/*.{js,ts}\" \"__tests__/**/*.{js,ts}\"",
    "format:check": "prettier --check \"lib/**/*.{js,ts}\" \"bin/**/*.{js,ts}\" \"__tests__/**/*.{js,ts}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "bench": "node --expose-gc benchmarks/run-all.js"
  },
  "browserify": {
    "transform": [
      "./browser/transform.js"
    ]
  },
  "devDependencies": {
    "@types/node": "24.6.2",
    "@typescript-eslint/eslint-plugin": "8.45.0",
    "@typescript-eslint/parser": "8.45.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "9.37.0",
    "eslint-config-prettier": "10.1.8",
    "prettier": "3.6.2",
    "tsup": "8.5.0",
    "typescript": "5.9.3",
    "vitest": "^3.2.4"
  }
}
